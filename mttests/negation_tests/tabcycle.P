:-import ts_tnot/1, ts_abolish_tables/0, ts_call/1, ts_assert/1 from thread.

/* */

test(N,Str):- 
	ts_assert((win(X,M):-win(X,M))),
	ts_call(win(1,N)),
	writeln(Str,won).

win(A,N):- cycle(A,B,N),ts_tnot(win(B,N)).

cycle(A,B,N):- 
	integer(A),
	A > 0,
	(A < N -> 
	    B is A + 1
	  ; A == N, B = 1).



