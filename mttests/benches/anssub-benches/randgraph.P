% Generates a graph with Glinks among nodes from 1..Nodes
genGraph(Nodes,Links,GraphS):- 
	retractall('_$edges'(_,_)),
	genGraph_1(Links,Nodes),
	findall(edge(F,T),'_$edges'(F,T),Graph),
	sort(Graph,GraphS),
	retractall('_$edges'(_,_)).

genGraph_1(0,_Nodes):- !.
genGraph_1(N,Nodes):- 
	gen_edge(Nodes),
	N1 is N - 1,
	genGraph_1(N1,Nodes).

gen_edge(Nodes):- 
	repeat,
	random(1,Nodes,F),
	random(1,Nodes,T),
	T \== F,
	\+ '_$edges'(F,T),
	assert('_$edges'(F,T)),
	!.

