writeEdges(List):- 
	member(edge(F,T),List),
	name(F,FL),
	name(T,TL),
	atom_codes(NewF,[110|FL]),
	atom_codes(NewT,[110|TL]),
	write(edge(NewF,NewT)),writeln('.'),
	fail.
