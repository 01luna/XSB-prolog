#define Q_LENGTH  10

:- import 
     socket/2, socket_bind/3, socket_listen/3, socket_accept/3, 
     socket_set_option/3, socket_close/2 from socket.

:- import file_close/1, fmt_write/3, fd2ioport/2, file_flush/2 from file_io.

:- import 
        file_write/2,
        file_write_canonical/2 
        from xsb_writ.

