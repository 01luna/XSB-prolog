:- table p4/3.

p4(A1, A2, A3) :- p4(A1, A2, A3).

p4(A1, A2, A3) :-
	attv_unify(A1, f(X, 2, Y)),
	attv_unify(A2, 'string'),
	attv_unify(A3, [X, b, Y]).
p4(A1, A2, A3) :-
	put_attributes(A1, v(11)),
	put_attributes(A2, v(22)),
	put_attributes(A3, v(33)).
p4(A1, A2, A3) :-
	put_attributes(A1, v(111)),
	put_attributes(A2, v(222)),
	put_attributes(A3, v(333)).
