:- import put_attributes/2, get_attributes/3 from machine.
:- import get_atts/2, put_atts/2 from atts.
:- import attv_unify/2 from machine.

test :-
	test_table1,
	test_table2,
	test_data_backtrack,
	writeln('PASSED tabled_attv').


verify_attributes(Var, Value) :-
	% write('  -- verify: '), writeln(Var-Value),
	attv_unify(Var, Value).


:- table p/3.

test_table1 :-
	put_attributes(X, v(1)),
	put_attributes(X, v(2,2)),
	put_attributes(X, v(3,3,3)),
	put_attributes(X, []),
	put_attributes(X, v(4,4,4,4)),
	Y = X,
	put_attributes(Z, vz(1)),
	p(X, f(Y,Z), W),
	call(true),				% to be removed (???)
	get_attributes(Z, VZ, _), VZ = vz(5,5,5,5,5),
	X == Y,
	get_attributes(W, VW, _), VW = vw(1),
	writeln('First time of test_table1: OK'),
	fail.
test_table1 :-
	put_attributes(X, v(4,4,4,4)),
	Y = X,
	put_attributes(Z, vz(1)),
	writeln('Before call p/3'),
	p(X, f(Y,Z), W),
	get_attributes(Z, VZ, _), VZ = vz(5,5,5,5,5),
	X == Y,
	get_attributes(W, VW, _), VW = vw(1),
	writeln('Second time of test_table1: OK').

p(_A,B,C) :-
	B = f(_Y,Z),
	put_attributes(Z, vz(5,5,5,5,5)),
	put_attributes(C, vw(1)).

