p(X, A1, A2, A3, A4) :-
	X = f(A1, A2, A3, A4, New),
	get_attributes(A2, V2, _),
	write('in p/5: V2 = '), writeln(V2),
	attv_unify(A1, 5),
	put_attributes(A2, v2(22)),
	get_attributes(A2, NewV2, _),
	write('in p/5: NewV2 = '), writeln(NewV2),
	put_attributes(New, v5(5)).

