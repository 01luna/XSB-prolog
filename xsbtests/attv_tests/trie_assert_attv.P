:- import put_attributes/2, get_attributes/3 from machine.

:- index(p/2, trie).

test :-
	put_attributes(X, v(1)),
	assert(p(X,X)),
	fail.
test :-
	p(X,Y),
	get_attributes(X, VX, _),
	nonvar(VX), VX = v(1), writeln(VX),
	% update the attribute of X (== Y)
	put_attributes(X, v(11)),
	get_attributes(Y, VY, _),
	nonvar(VY), VY = v(11), writeln(VY),
	writeln('Passed trie_assert_attv!').
