/* test very large asserts */

makelist(N,_,[]) :- N=<0.
makelist(N,X,[X|R]) :- N>0, N1 is N-1, makelist(N1,X,R).

between(L,L,H) :- L=<H.
between(L,M,H) :- L<H, L1 is L+1, between(L1,M,H).

