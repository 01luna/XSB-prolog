pdb(Sizes,Term,DB) :-
    term_variables(Term,Vars),
    findall(Term,gentup(Sizes,Vars),Tups),
    empty_db(DB0),
    assert_in_db(Tups,DB0,DB).

pdb(Sizes,DB) :-
    findall((Tup:-B),(gentup(Sizes,List),Tup=..[p|List],(B=a;B=b;B=c)),Tups),
    empty_db(DB0),
    assert_in_db(Tups,DB0,DB).

gentup([],[]).
gentup([[Lo,Hi,Inc]|R],[PI|S]) :-
    for(I,Lo,Hi,Inc),
    number_codes(I,IC),
    atom_codes(PI,[0'p|IC]),
    gentup(R,S).

for(Lo,Lo,Hi,_Inc) :-
    Lo =< Hi.
for(I,Lo,Hi,Inc) :-
    Lo1 is Lo+Inc,
    Lo1 =< Hi,
    for(I,Lo1,Hi,Inc).

%% old union of DBs
naive_union_db(DB1,DB2,DB3) :-
    findall((H:-B),clause_in_db(H,B,DB1),Clauses),
    assert_in_db(Clauses,DB2,DB3).

naive_union_dbi(DB1,DB2,DB3) :-
    findall((H:-B),clause_in_dbi(H,B,DB1),Clauses),
    assert_in_dbi(Clauses,DB2,DB3).

