# Assume .h files are in the include path (use --site-includes)
# and smodels.dll is in site-lib path

CXX = @CXX@
GCC = @CC@
CFLAGS=@CFLAGS@
LDFLAGS=@LDFLAGS@
PROLOG = ../../bin/xsb
DEFFILE=@XASPDEFFILE@

LIBNAME=@XASPLIBNAME@

ALL = xasppkg.xwam sm_clause_store.xwam sm_int.xwam

Option = [sysmod,optimize]

CFLAGS += -I@arch_config_prefix@
LDFLAGS += -L@arch_config_prefix@/bin

.IGNORE:

.SUFFIXES: .P .xwam .H .so

xasppkg.xwam: xasppkg.H
	echo 'mc($*, $(Option)).' >> cmd...

.P.xwam:
	echo 'mc($*,$(Option)).' >> cmd...

all: rest

rest: $(ALL)
	../../build/touch.sh cmd... ; \
	$(PROLOG) < cmd... ; \
	rm -f cmd...

xsb_wrap_xasppkg.c: xasppkg.H
	$(PROLOG) -e \
	"import wrap/2 from wrapping. wrap('xasppkg.H','xsb_wrap_xasppkg.c'). halt." 

clean: 
	/bin/rm -f *.o *.so *.xwam *.h

xsb_wrap_xasppkg.o: xsb_wrap_xasppkg.c
	$(GCC) $(CFLAGS) -c xsb_wrap_xasppkg.c

xasppkg.o: xasppkg.c
	$(CXX) $(CFLAGS) -c -o xasppkg.o $(LDFLAGS) -lsmodels xasppkg.c


module: xsb_wrap_xasppkg.o xasppkg.o xasppkg.def
	$(CXX) $(CFLAGS) $(LDFLAGS) -shared -s -o $(LIBNAME) \
		xasppkg.o xsb_wrap_xasppkg.o $(DEFFILE) -lsmodels -lxsb
	@cp $(LIBNAME) @arch_config_prefix@/bin

nope:


.DONE:
	echo Done
