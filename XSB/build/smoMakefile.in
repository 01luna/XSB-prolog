ALL = smodels.O smodelsops.O smodelsint.O

SMODELS = @with_smodels@

SMODELSOBJ = $(SMODELS)/api.o $(SMODELS)/atomrule.o $(SMODELS)/dcl.o \
	$(SMODELS)/denant.o $(SMODELS)/improve.o $(SMODELS)/list.o \
	$(SMODELS)/main.o $(SMODELS)/program.o $(SMODELS)/queue.o \
	$(SMODELS)/read.o $(SMODELS)/smodels.o $(SMODELS)/stable.o \
	$(SMODELS)/stack.o $(SMODELS)/timer.o $(SMODELS)/tree.o

SMODELSHEADER= $(SMODELS)/api.h $(SMODELS)/atomrule.h $(SMODELS)/dcl.h \
	$(SMODELS)/defines.h $(SMODELS)/list.h $(SMODELS)/print.h \
	$(SMODELS)/program.h $(SMODELS)/queue.h $(SMODELS)/read.h \
	$(SMODELS)/smodels.h $(SMODELS)/stable.h $(SMODELS)/stack.h \
	$(SMODELS)/timer.h $(SMODELS)/tree.h

Option = [sysmod,optimize]

GCC=@CC@
CFLAGS=@CFLAGS@ -I@arch_config_prefix@
GMM=g++
XSB=../../bin/xsb
Prolog = $(XSB) 

.IGNORE:

.SUFFIXES: .P .O .H .so

.H.O:
	echo 'compile($*, $(Option)).' >> cmd...

.P.O:
	echo 'mc($*,$(Option)).' >> cmd...

all: $(ALL)
	@../../build/touch.sh cmd...
	$(Prolog) < cmd...
	@rm cmd...

clean: 
	rm *.o *.so *.O *.h

xsb_wrap_smodels.o: xsb_wrap_smodels.c
	$(GCC) $(CFLAGS) -c xsb_wrap_smodels.c

module: xsb_wrap_smodels.o 
	$(GMM) $(CFLAGS) -s -o smodels.so -shared -I$(SMODELS) \
	-L$(SMODELS) smodels.c \
	xsb_wrap_smodels.o $(SMODELS)/.libs/libsmodels.a

nope:


.DONE:
	echo Done
