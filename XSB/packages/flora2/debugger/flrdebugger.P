write_goal_commalist(','(G,Gs)) :-
	!,
	flora_write_goal(G),
	print_item(','),
	write_goal_commalist(Gs).
write_goal_commalist(G) :-
	!,
	flora_write_goal(G).

write_disjunction(';'(G1,G2)) :-
	!,
	flora_write_goal(G1),
	print_item(' ; '),
	flora_write_goal(G2).


