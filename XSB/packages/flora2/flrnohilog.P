:- compiler_options([xpp_on]).


#include "flora_terms.flh"


flora_nohilog(FLORA_THIS_MODULE,1) :- !.


/****************************************************************************
  flora_nohilogdef(+Functor,+Arity)
****************************************************************************/
flora_nohilogdef(X,Y) :-
	flora_nohilog(X,Y),
	!.

flora_nohilogdef(X,Y) :-
	( conget(flora_shell_mode,1) ->
	    flora_shnohilog(X,Y)
	;
	  flora_dynnohilog(X,Y)
	).


/****************************************************************************
  flora_reset_nohilog/0
****************************************************************************/
flora_reset_nohilog :- retractall(flora_dynnohilog(_,_)).


/****************************************************************************
  flora_define_nohilog(+Functor,+Arity)
****************************************************************************/
flora_define_nohilog(Functor,Arity) :-
	(var(Functor); var(Arity)),
	!,
	assert(flora_dynnohilog(Functor,Arity)).

flora_define_nohilog(Functor,Arity) :-
	( flora_nohilog(Functor,Arity) ->
	    true
	;
	  assert(flora_dynnohilog(Functor,Arity))
	).


/****************************************************************************
  flora_shreset_nohilog/0
****************************************************************************/
flora_shreset_nohilog :- retractall(flora_shnohilog(_,_)).


/****************************************************************************
  flora_shdefine_nohilog(+Functor,+Arity)
****************************************************************************/
flora_shdefine_nohilog(Functor,Arity) :-
	(var(Functor); var(Arity)),
	!,
	assert(flora_shnohilog(Functor,Arity)).

flora_shdefine_nohilog(Functor,Arity) :-
	( flora_nohilog(Functor,Arity) ->
	    true
	;
	  assert(flora_shnohilog(Functor,Arity))
	).
