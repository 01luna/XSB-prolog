:- compiler_options([xpp_on]).

#include "flora_terms.flh"


flora_sign((findall),3,[FL_OID,FL_BODYFORMULAR,FL_OID]) :- !.


/****************************************************************************
  flora_signdef(+Functor,+Arity,+ArgsList)
****************************************************************************/
flora_signdef(X,Y,Z) :-
	flora_sign(X,Y,Z),
	!.

flora_signdef(X,Y,Z) :-
	( conget(flora_shell_mode,1) ->
	    flora_shsign(X,Y,Z)
	;
	  flora_dynsign(X,Y,Z)
	).


/****************************************************************************
  flora_conflict_signature(+Op,+Arity,+Args)
****************************************************************************/
flora_conflict_signature(O,A,Args) :-
	flora_sign(O,_A,_Args),
	(A \= _A; Args \= _Args).


/****************************************************************************
  flora_reset_signature/0
****************************************************************************/
flora_reset_signature :- retractall(flora_dynsign(_,_,_)).


/****************************************************************************
  flora_define_signature(+Op,+Arity,+Args)
****************************************************************************/
flora_define_signature(Op,Arity,Args) :-
	( flora_sign(Op,Arity,Args) ->
	    true

	; flora_dynsign(Op,Arity,_) ->
	    retractall(flora_dynsign(Op,Arity,_)),
	    assert(flora_dynsign(Op,Arity,Args))
	;
	  assert(flora_dynsign(Op,Arity,Args))
	).


/****************************************************************************
  flora_shreset_signature/0
****************************************************************************/
flora_shreset_signature :- retractall(flora_shsign(_,_,_)).


/****************************************************************************
  flora_shdefine_signature(+Op,+Arity,+Args)
****************************************************************************/
flora_shdefine_signature(Op,Arity,Args) :-
	( flora_sign(Op,Arity,Args) ->
	    true

	; flora_shsign(Op,Arity,_) ->
	    retractall(flora_shsign(Op,Arity,_)),
	    assert(flora_shsign(Op,Arity,Args))
	;
	  assert(flora_shsign(Op,Arity,Args))
	).
