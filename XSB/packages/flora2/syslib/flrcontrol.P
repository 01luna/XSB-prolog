#include "flora_terms.flh"

%% if then else
FL_ELSE(FL_IF(FL_THEN(X,Y)),_Z) :- call(X), call(Y).
FL_ELSE(FL_IF(FL_THEN(X,_Y)),Z) :- sk_not(X), call(Z).
FL_IF(FL_THEN(X,Y)) :- else(FL_IF(FL_THEN(X,Y)),fail).
