:- compiler_options([xpp_on]).

#include "flora_terms.flh"


:- import flora_register_syslib/1 from flrlibman.

:- import flora_wspredicate/4 from flrwrapper.


/*********************************************************************
  This file is for the following dynamic module references:
  FLLIBMODLIT and FLLIBMODOBJ.
*********************************************************************/
?- flora_register_syslib(FLLIBDYNMOD).


/*********************************************************************
  system library registration
*********************************************************************/
?- flora_register_syslib(FLLIBMODLIT).


/*********************************************************************
  fllibmodlit(+Functor,+Args,+Workspace)
*********************************************************************/
fllibmodlit(F,Args,WS) :-
	flora_wspredicate(F,Args,WS,P),
	call(P).


/*********************************************************************
  system library registration
*********************************************************************/
?- flora_register_syslib(FLLIBMODOBJ).


/*********************************************************************
  fllibmodobj(+Functor,+Args,+Workspace,-Predicate)
*********************************************************************/
fllibmodobj(F,Args,WS,P) :-
	flora_wspredicate(F,Args,WS,P).
