:- compiler_options([xpp_on]).

#include "flora_terms.flh"


/****************************************************************************
  flora_undefined_predicate_hook/1
****************************************************************************/
flora_undefined_predicate_hook([PredName,_XSBModule,_PscRecord,true]) :-
	flora_flogic_predicate(PredName,WS,_Position,Base),
	!,
	flora_stdmsg_nl,
	( Base == WRAP_OBJEQL ->
	    flora_message_line('automatically loading the equality traielr into module `%s''',args(WS)),
	    flloadtrailer(EQLTRAILER,WS)
	;
          flora_message_line('automatically loading the standard traielr into module `%s''',args(WS)),
          flloadtrailer(STDTRAILER,WS)
	),
	!.

flora_undefined_predicate_hook([PredName,_XSBModule,_PscRecord,fail]) :-
	flora_hilog_predicate(PredName,Workspace),
	!,
	flora_stderr_nl,
	flora_error_line("undefined HiLog predicate in module `%s'",args(Workspace)).

flora_undefined_predicate_hook([PredName,_XSBModule,PscRecord,fail]) :-
	flora_nohilog_predicate(PredName,Predicate,Workspace),
	!,
	psc_arity(PscRecord,N),
	flora_stderr_nl,
	flora_error_line("undefined predicate %s/%d in module `%s'",args(Predicate,N,Workspace)).
