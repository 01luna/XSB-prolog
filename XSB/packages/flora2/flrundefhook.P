:- compiler_options([xpp_on]).

#include "flora_terms.flh"


/****************************************************************************
  flora_undefined_predicate_hook/1
****************************************************************************/
flora_undefined_predicate_hook([PscRecord,fail]) :-
	psc_name(PscRecord,PredName),
	flora_flogic_predicate(PredName,WS,_Position,_Base),
	!,
	flora_error_line('undefined F-logic predicate %s in module %s',
			 args(PredName,WS)),
	abort.

flora_undefined_predicate_hook([PscRecord,fail]) :-
	psc_name(PscRecord,PredName),
	flora_hilog_predicate(PredName,Workspace),
	!,
	flora_error_line('undefined HiLog predicate %s in module %s',
			 args(PredName,Workspace)),
	abort.

flora_undefined_predicate_hook([PscRecord,fail]) :-
	psc_name(PscRecord,PredName),
	flora_nohilog_predicate(PredName,Predicate,Workspace),
	!,
	psc_arity(PscRecord,N),
	flora_error_line('undefined predicate %s/%d in module %s',
			 args(Predicate,N,Workspace)),
	abort.
