:- comment(dump_extensional_facts/1,"@tt{dump_extensional_facts(Dir)}
writes extensional facts to the file @tt{cdf_extensional.P} in
@tt{Directory}.  No intensional rules are dumped by this predicate.

@pred{dump_extensional_facts/0} writes the @tt{cdf_extensional.P} file
to the current directory.
").

dump_extensional_facts(Dir) :-
	throw_cdf_writable(Dir),
	dump_extensional_facts_1(Dir).

dump_extensional_facts_1(Dir) :-
	cdf_fix_dir(Dir,DirS),
  	concat_atom([DirS,'cdf_extensional.P'],File),
	tell(File),
	i2ie, hasAttr2hasAttre, strel2strele, allAttr2allAttre,
	told.

throw_cdf_writable(Dir):-
	((slash(Slash),concat_atom([Dir,Slash,'cdf_extensional.P'],SchemaPath),
	  path_sysop(writable, SchemaPath)) -> 
	    true
             ;  cdf_error(permissions,['Directory is not writable: ',Dir])).

sort_and_write_terms(Terms) :-
	sort(Terms,STerms),
	member(Term,STerms),
	write_canonical(Term),writeln('.'),
	fail.
sort_and_write_terms(_Terms).

i2ie :-
	findall(isa_ext(NSubCid,NSupCid),
		isa_ext(NSubCid,NSupCid),
		SubClasses),
	sort_and_write_terms(SubClasses).

hasAttr2hasAttre :-
	findall(hasAttr_ext(NSCid,NRCid,NTCid),
		hasAttr_ext(NSCid,NRCid,NTCid),
		Relationships),
	sort_and_write_terms(Relationships).
	
strel2strele :-
	findall(classHasAttr_ext(NSCid,NRCid,NTCid),
		classHasAttr_ext(NSCid,NRCid,NTCid),
		Strels),
	sort_and_write_terms(Strels).

allAttr2allAttre :-
	findall(allAttr_ext(NSCid,NRCid,NTCid),
		allAttr_ext(NSCid,NRCid,NTCid),
		Allattrs),
	sort_and_write_terms(Allattrs).

