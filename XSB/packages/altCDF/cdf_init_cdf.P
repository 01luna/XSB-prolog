:- comment(is_a_strel/1, "@tt{is_a_strel(RCid)} checks that @tt{RCid}
is the class ID of a subclass of @tt{id('CDF Set-Valued
Relations','CDF')}.  If @tt{RCid} is unbound, all such (proper)
subclasses are returned nondeterministically.").

is_a_strel(RCid) :-
	proper_isa(RCid,sid('CDF Set-Valued Relations','CDF')).

:- comment(strel/3, "@tt{strel(SCid,RCid,TCid)} defines the semantic
set-valued relation predicate, where @tt{SCid} is the source class ID,
@tt{RCid} is the relation class ID, and @tt{TCid} is the target class
ID. ").

immediate_strel(SCid,RCid,TCid) :- strel_ext(SCid,RCid,TCid).
immediate_strel(SCid,RCid,TCid) :- strel_int(SCid,RCid,TCid).

strel(SCid,RCid,TCid) :-
	var(SCid),var(RCid),var(TCid), !,
	immediate_strel(SCid,RCid,TCid).
strel(SCid,RCid,TCid) :-
	var(RCid), !,  %% relation is free var
	is_a_strel(RCid),
	strel_2fix(SCid,RCid,TCid).
strel(SCid,RCid,TCid) :-
	strel_2inh(SCid,RCid,TCid).

:- table strel_2fix/3.
strel_2fix(SCid,RCid,TCid) :-
	OutTerm = strel(SCid,RCid,TCid),
	copy_term(OutTerm,BindPat),
	strel_gen13(SCid,RCid,TCid),
	(strel_max_implicative(OutTerm,BindPat) -> fail ; true).

:- table strel_2inh/3.
strel_2inh(SCid,RCid,TCid) :-
	OutTerm = strel(SCid,RCid,TCid),
	copy_term(OutTerm,BindPat),
	strel_gen2(SCid,RCid,TCid),
	(strel_max_implicative(OutTerm,BindPat) -> fail ; true).

:- table strel_gen2/3.
strel_gen2(SCid,RCid,TCid) :-
	isa(RCidP,RCid),
	strel_gen13(SCid,RCidP,TCid).

:- table strel_gen13/3.
strel_gen13(SCid,RCid,TCid) :-
	(var(SCid)
	 ->	(var(TCid)
		 ->	immediate_strel(SCid,RCid,TCid)
		 ;	isa(TCidP,TCid),
			immediate_strel(SCid,RCid,TCidP)
		)
	 ;      immediate_strel(SCid,RCid,TCidP),
		(var(TCid)
		 ->	TCid = TCidP
		 ;	isa(TCidP,TCid) 
		)
	).

strel_max_implicative(Term,BindPat) :-
	BindPat = strel(SCid,RCidO,TCidO),
	Term = strel(SCid,RCid,TCid),
	strel_gen2(SCid,RCidO,TCidO),
	\+ (Term = BindPat),	
	isa(RCidO,RCid),	
	isa(TCidO,TCid).

