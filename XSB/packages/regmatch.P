:- import xsb_configuration/2 from configuration.
:- import bootstrap_package/2 from packaging.
:- import abort/1 from standard.


%% bootstrap(package-dirname-as-string, package-name-as-symbol).
%% This also asserts 
%% package_configuration(dir(PackageName), FullPackageDirname)
%% some packages use it.

:- export re_match/7, re_subst/6.
:- import do_regmatch__/7, do_regsubst__/6 from xsb_re_match.

:- bootstrap_package('regmatch', regmatch),
   (xsb_configuration(regmatch_support, 'yes') -> [regmtchshell]
     ;
     abort('Your system does not seem to have the POSIX pattern matching library installed.')
     ).

re_match(Regexp, Str, IgnoreCase, Match, Prematch, Postmatch ,ParenMatches) :-
	do_regmatch__(Regexp, Str, IgnoreCase,
	    	      Match, Prematch, Postmatch, ParenMatches).
re_subst(Regexp, Str, IgnoreCase, WhichMatch, SubstString, OutStr) :-
	do_regsubst__(Regexp, Str, IgnoreCase, WhichMatch, SubstString,OutStr).
