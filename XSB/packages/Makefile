ALL = 	flora.O slx.O perlmatch.O gap.O regmatch.O wildmatch.O sModels.O

SUBDIR = flora slx perlmatch gap regmatch wildmatch

Option = [optimize]

#-----------------------------------------------------------------------#
#
# Self-make: Version 1.4.1
#
XSB=../bin/xsb
Prolog = $(XSB) -i -s -m 2000 -c 2000
#
#-----------------------------------------------------------------------#

# continue to the next when one error occurs
.IGNORE:

# suffix rules
.SUFFIXES: .P .O .H

.H.P:
	echo 'mc($*, $(Option)).' >> cmd...

.P.O:
	echo 'mc($*, $(Option)).' >> cmd...


all: $(ALL) $(SUBDIR)
	@touch cmd...
	$(Prolog) < cmd...
	/bin/rm cmd...

slx::
	@echo ""
	cd slx; make

flora::
	@echo ""
	cd flora; make

perlmatch::
	@echo ""
	cd perlmatch; make

gap::
	@echo ""
	cd gap; make

regmatch::
	@echo ""
	cd regmatch; make

wildmatch::
	@echo ""
	cd wildmatch; make


# Unfortunately, this needs to be commented on the NeXT.
# %.O:	%.H

.DONE:
	@echo Done
