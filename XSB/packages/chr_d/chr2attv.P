simpagation1_code(Head,LastRule,OtherHs,R,F/A,I,N,Constrs,Mod,L,T) :-
	Head =.. [F|Args],
	build_head(F/A,I,HeadVs,RHeadLabel,RHead),	
	N is I+1,

        (LastRule = true,
	 \+ all_stored_heads([Head],Constrs)
	 -> NextRHead = true
	  ; build_head(F/A,N,HeadVs,NextRHead)
	),
	
	pairup(Args,HeadVs,HeadPairs),
	intermediate_head_arg_matches(HeadPairs,[],FirstMatching,VarDict),

	R = pragma(rule(_Head1,Head2,Guard,Body),_,_),
	
	list_copies([Head,OtherHs,Head2,Guard,Body],VarDict,
		    [HeadCp,OtherHsCp,Head2Cp,GuardCp,BodyCp]),

	guards_join_order(HeadVs,GuardCp,FreeParsGuards,BoundParGuards),

	heads_intersect(OtherHsCp,Head2Cp,MatchRecHs),
%	MatchRecHs = [],
	append(OtherHsCp,Head2Cp,RestHsCp),
	abs_remove_same(RestHsCp,MatchRecHs,MatchOnceHs,[]),

	heads_join_order(HeadVs,MatchOnceHs,FreeParHs,BoundParsHs),

	(MatchRecHs = [MatchRecH|OtherMatchRecHs]
	 -> append(FreeParHs,[MatchRecH],GetNthAttrHs)
	  ; GetNthAttrHs = FreeParHs, OtherMatchRecHs = []
	),
	build_head_arg_passive_head_match(HeadVs,GetNthAttrHs,AttrVarMatches),
	build_get_nth_attr_clauses(AttrVarMatches,Constrs,Mod,
		          GetNthAttrClauseList,NthAtts,AttrLists,AttrChecks),
	list2and(GetNthAttrClauseList,GetNthAttrClauses),
/*
	and2list(BodyCp,BodyCpL),
	(member(Head,BodyCpL)
	 -> str_cat('add_',F,AddName),
	    AddCall =.. [AddName|HeadVs]
	  ; AddCall = true
	),
*/	
	str_cat(RHeadLabel, '_1', RecursiveCallLabel),
	append(HeadVs,NthAtts,RecursiveArgs),
	RecursiveCall =.. [RecursiveCallLabel|RecursiveArgs],
	
	RCode = (RHead :-
		  (FirstMatching,
		   FreeParsGuards,
		      
		   GetNthAttrClauses
		   -> %AddCall,
		      RecursiveCall
		    ; true
		  ),
		  NextRHead

		),


	    L = [RCode|L1],
	    simpagation_recursive_code(F,HeadVs,I,A,AttrLists,AttrChecks,
		      Constrs,Mod,HeadCp,BoundParsHs,OtherMatchRecHs,Head2Cp,
				                  BoundParGuards,BodyCp,L1,T).
	


simpagation2_code(Head,LastRule,OtherHs,R,F/A,I,N,Constrs,L,T) :-
	Head =.. [F|Args],
	build_head(F/A,I,HeadVs,RHead),	
	N is I+1,
	
        (LastRule = true,
	 \+ all_stored_heads([Head],Constrs)
	 -> NextRHead = fail
	  ; build_head(F/A,N,HeadVs,NextRHead)
	),
	
	pairup(Args,HeadVs,HeadPairs),
	intermediate_head_arg_matches(HeadPairs,[],FirstMatching,VarDict),

	R = pragma(rule(Head1,_Head2,Guard,Body),_,_),
	list_copies([Head1,OtherHs,Guard,Body],VarDict,
		    [Head1Cp,OtherHsCp,GuardCp,BodyCp]),
	append(Head1Cp,OtherHsCp,RestHsCp),

	guards_join_order(HeadVs,GuardCp,FreeParsGuards,BoundParGuards),

	heads_join_order(HeadVs,RestHsCp,FreeParHs,BoundParsHs),
	append(FreeParHs,BoundParsHs,OrderedHs),
	build_constr_check_match(HeadVs,Constrs,OrderedHs,OrderedHsCM),
	
	heads_join_order(HeadVs,OtherHsCp,FreeParRmHs,BoundParsRmHs),
	append(FreeParRmHs,BoundParsRmHs,OrderedRmHs),
	build_constr_remove(OrderedRmHs,RemoveCode),

	and2list(BodyCp,BodyCpL),
	(member(Head,BodyCpL)
	 -> str_cat('add_',F,AddName),
	    AddCall =.. [AddName|HeadVs]
	  ; AddCall = true
	),

	RCode = (RHead :-
		    (FirstMatching,
			after_first_matching,
		     FreeParsGuards,
		     OrderedHsCM,
		     BoundParGuards
		     -> AddCall,
			RemoveCode,
			BodyCp
		      ; NextRHead
		    )
		),

	L = [RCode|T].



