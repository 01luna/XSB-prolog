rule_clauses([R|Rs],Mod,Constr,RI,RN,Constrs,L,T) :-
	(Rs = []
	 -> rule_code(R,true,Constr,RI,RN,Constrs,Mod,L,T)
	  ; rule_code(R,false,Constr,RI,RJ,Constrs,Mod,L,T1),
	    rule_clauses(Rs,Mod,Constr,RJ,RN,Constrs,T1,T)
	).

rule_code(R,LastRule,F/A,RI,RN,Constrs,Mod,L,T) :-
	R = pragma(rule(Head1,Head2,_Guard,_Body),IDs,_Pragmas),
	IDs = (IDs1,IDs2),
%	head1code(Head1,[],IDs1,[],R,F,A,RI,RJ,Constrs,L,L1),
%	head2code(Head2,[],IDs2,[],R,F/A,RJ,RN,PI,PN,Constrs,Mod,PCnt,L1,T).
	% head2code first for reverse order of simpagation rules (deletion last)
	% - improves performance for gcd example
	(LastRule = true
	 -> (Head1 = []
	     -> head2code(Head2,true,[],IDs2,[],R,F/A,RI,RN,Constrs,Mod,L,T)
	      ; head2code(Head2,false,[],IDs2,[],R,F/A,RI,RJ,Constrs,Mod,L,L1),
		head1code(Head1,true,[],IDs1,[],R,F/A,RJ,RN,Constrs,Mod,L1,T)
	    )
	  ; head2code(Head2,LastRule,[],IDs2,[],R,F/A,RI,RJ,Constrs,Mod,L,L1),
	    head1code(Head1,LastRule,[],IDs1,[],R,F/A,RJ,RN,Constrs,Mod,L1,T)
	).



head1code([],_,_,_,_,_,_,I,I,_,_,L,L).
head1code([H|Hs],LastRule,RestHs,[ID|IDs],RestIDs,R,F/A,I,N,Constrs,Mod,L,T) :-
	R = pragma(Rule,_,Pragmas),
	(functor(H,F,A),
	 \+ check_unnecessary_active(H,RestHs,Rule),
	 \+ var_member(passive(ID),Pragmas),
	 append(Hs,RestHs,OtherHs),
	 all_stored_heads(OtherHs,Constrs)
	 -> append(IDs,RestIDs,OtherIDs),
	    head1code_1(H,LastRule,OtherHs,OtherIDs,R,F/A,I,J,Constrs,Mod,L,L1)
	  ; J = I, L1 = L
	),
	head1code(Hs,LastRule,[H|RestHs],IDs,[ID|RestIDs],R,F/A,J,N,Constrs,Mod,L1,T).


head1code_1(H,LastRule,OtherHs,_OtherIDs,R,F/A,I,N,Constrs,Mod,L,T) :-
	R = pragma(Rule,_IDs,_Pragmas),
	Rule = rule(_Head1,Head2,_Guard,_Body),
	(Head2 == []
	 -> simplification_code(H,LastRule,OtherHs,Rule,F/A,I,N,Constrs,L,T)
	  ; simpagation1_code(H,LastRule,OtherHs,R,F/A,I,N,Constrs,Mod,L,T)
	).



head2code([],_,_,[],_,_,_,I,I,_,_,L,L).
head2code([H|Hs],LastRule,RestHs,[ID|IDs],RestIDs,R,F/A,RI,RN,Cs,Mod,L,T) :-
	R = pragma(Rule,_,Pragmas),	
	(functor(H,F,A),
	 \+ check_unnecessary_active(H,RestHs,Rule),
	 \+ var_member(passive(ID),Pragmas),
	 append(Hs,RestHs,OtherHs),
	 all_stored_heads(OtherHs,Cs)
	 -> append(IDs,RestIDs,OtherIDs),	    
	    head2code_1(H,LastRule,OtherHs,OtherIDs,R,F/A,RI,RJ,Cs,Mod,L,L1)
	  ; RJ = RI, L1 = L
	),
	head2code(Hs,LastRule,[H|RestHs],IDs,[ID|RestIDs],R,F/A,RJ,RN,Cs,Mod,L1,T).


head2code_1(H,LastRule,OtherHs,_OtherIDs,R,F/A,RI,RN,Constrs,Mod,L,T) :-
	R = pragma(Rule,_,_),
	Rule = rule(Head1,_Head2,_Guard,_Body),
	(Head1 == []
	 -> propagation_code(H,LastRule,OtherHs,Rule,F/A,RI,RN,Constrs,Mod,L,T)
	  ; simpagation2_code(H,LastRule,OtherHs,R,F/A,RI,RN,Constrs,L,T)
	).
	
	

simplification_code(Head,LastRule,OtherHs,R,F/A,I,N,Constrs,L,T) :-
	Head =.. [F|Args],
	build_head(F/A,I,HeadVs,RHead),
	N is I+1,

        (LastRule = true,
	 \+ all_stored_heads([Head],Constrs)	
	 -> NextRHead = fail
	  ; build_head(F/A,N,HeadVs,NextRHead)
	),

	pairup(Args,HeadVs,HeadPairs),
	intermediate_head_arg_matches(HeadPairs,[],FirstMatching,VarDict),
	
	my_term_copy(OtherHs,VarDict,VarDict1,OtherHsCp),
	
	heads_join_order(HeadVs,OtherHsCp,FreeParHs,BoundParsHs),
	append(FreeParHs,BoundParsHs,OrderedHs),

	build_constr_check_match(HeadVs,Constrs,OrderedHs,OtherHsCM),

	R = rule(_Head1,_Head2,Guard,Body),
	list_copies([Guard,Body],VarDict1,[GuardCp,BodyCp]),

	guards_join_order(HeadVs,GuardCp,FreeParsGuards,BoundParGuards),

	build_constr_remove(OtherHsCp,OtherHsRemove),

/*
	and2list(BodyCp,BodyCpL),
	(member(Head,BodyCpL)
	 -> str_cat('add_',F,AddName),
	    AddCall =.. [AddName|HeadVs]
	  ; AddCall = true
	),
*/

        RCode = (RHead :-
		      (FirstMatching,
		       FreeParsGuards,
		       OtherHsCM,
		       BoundParGuards
		       -> %AddCall,
			  OtherHsRemove,
		          BodyCp
		        ; NextRHead
		      )
		),
	
	L = [RCode|T].

