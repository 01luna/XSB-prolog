	delete_ith(AttrNum,NewArgAtts,NewIdAttr,RestArgAtts),
	PutAttsCall =.. [PutAttsName,Arg|NewArgAtts],

	ArgCode = (var(Arg)
		   -> GetAttsCall,
		      IthCall,
		      DeleteIthCall,
		      PutAttsCall
		    ; true),
	append(CodeList,[ArgCode],CL),
	generate_remove_constr_body(Off,AttrCnt,F,A,ArgNum,Args,Mod,CL,Code).


