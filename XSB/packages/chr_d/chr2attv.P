	build_constr_remove(RemoveHs,RemoveCode),
	
	append(RecursiveHeadVs,[AttsCp],RecursiveNextArgs),
	RecursiveNextHead =.. [HeadName|RecursiveNextArgs],

	RecursiveCase = (RecursiveHead :-
			    (FirstMatching,
			     GuardCp,
			     AttrCheckCp
			     -> RemoveCode,
%				HeadCp,
			        BodyCp
			      ; true
			    ),
			    RecursiveNextHead
			),
	
	L = [BaseCase,RecursiveCase|T].



