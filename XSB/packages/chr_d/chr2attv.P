% generate predicates to check if given constraint is already stored
generate_check_constr_clauses(Declarations,AttrCnt,Mod,CheckClauses) :-
	generate_check_constr_clauses(1,Declarations,AttrCnt,Mod,CheckClauses).

generate_check_constr_clauses(_,[],_,_,[]).
generate_check_constr_clauses(Off,[F/A|Cs],AttrCnt,Mod,CheckClauses) :-
	fmt_write_string(HName, "check_%s", arg(F)),
	generate_check_one_constr_clauses(Off,AttrCnt,F,A,1,HName,Mod,FClauses),
	Off_A is Off + A,
	generate_check_constr_clauses(Off_A,Cs,AttrCnt,Mod,CsClauses),
	append(FClauses,CsClauses,CheckClauses).


% generate code to cehck for constraint F/A
generate_check_one_constr_clauses(_,_,_,A,A1,_,_,[]) :-
	A1 is A + 1.
generate_check_one_constr_clauses(Off,AttrCnt,F,A,ArgId,HN,Mod,[C|Cs]) :-
	generate_check_one_constr_clause(Off,AttrCnt,A,ArgId,HN,Mod,C),
	Off1 is Off + 1,
	NextArg is ArgId + 1,
	generate_check_one_constr_clauses(Off1,AttrCnt,F,A,NextArg,HN,Mod,Cs).

generate_check_one_constr_clause(Off,AttrCnt,A,ArgId,HName,Mod,Clause) :-
	length(Args,A),
	Head =.. [HName|Args],
	delete_ith(ArgId,Args,Arg,OtherArgs),
	
	fmt_write_string(GetAttsName, "get_%s_atts", arg(Mod)),
	length(ArgAtts,AttrCnt),
	ith(Off,ArgAtts,IdAttr),
	GetAttsCall =.. [GetAttsName,Arg|ArgAtts],
	ArgAttr =.. ['attr'|OtherArgs],
	
	Body = (var(Arg),!,
	       GetAttsCall,
	       var_member(ArgAttr,IdAttr)),
	Clause = (Head :- Body).




