	build_get_nth_attr_clauses(Vs,Constrs,Mod,Cs,As,Ls,Chs),
	append_lists([C,Cs],Clauses),
	append_lists([A,As],Atts),
	append_lists([L,Ls],Lists),
	append_lists([Ch,Chs],Checks).

