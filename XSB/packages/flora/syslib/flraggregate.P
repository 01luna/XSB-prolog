	    sort(L,Groups),
	    member(G,Groups),
	    findall(D,member('_$_$_flora_rslt'(D,G),Matches),Bag)

	  ;
	    findall(D,member('_$_$_flora_rslt'(D,G),Matches),Bag)
	).


/****************************************************************************/
'_$_$_flora_var_exists'(X) :- var(X), !.

'_$_$_flora_var_exists'(T) :-
	functor(T,_,N),
	'_$_$_flora_var_exists'(T,N).

'_$_$_flora_var_exists'(T,N) :-
	N>=1,
	arg(N,T,Arg),
	( '_$_$_flora_var_exists'(Arg) ->
	    !
	  ;
	    M is N-1,
	    '_$_$_flora_var_exists'(T,M)
	).


