:- compiler_options([xpp_on]).

#mode save
#mode nostring "\!#'"
#define STD_FPREFIX(X)    '_$_$_flora_''X'
#mode restore

%% bootstrap(package-dirname-as-string, package-name-as-symbol).
%% This also asserts 
%% package_configuration(dir(PackageName), FullPackageDirname)
%% some packages use it.

:- import bootstrap_package/2, package_configuration/2 from packaging.
:- import STD_FPREFIX(shell)/0 from usermod.
:- import hide_this_show/2 from usermod.
:- import slash/1 from machine.
:- import trie_assert/1 from tables.
:- import conget/2 from gensym.
:- dynamic hide_this_show(_,_).

:- export bootstrap_flora/0, flora_shell/0.


%% bootstrap_package fails, if Flora is already loaded.
%% Then bootstrap_flora quietly succeeds without 
%% so that package_configuration won''t be asserted twice.
bootstrap_flora :-
	bootstrap_package([flora,lib,syslib,pkgs],flora),
	!,
	assert(package_configuration(version(flora),'0.931 of 1999/08/22')),
	package_configuration(dir(flora),FloraDir),
	slash(S),
	fmt_write_string(LibFlrDisplay,'%s%ssyslib%sflrdisplay',
			 f(FloraDir,S,S)),
	[tables, LibFlrDisplay, flrutils].
bootstrap_flora.

%% don''t show flora_shell in trace
:- trie_assert(hide_this_show(flora_shell,0)). 

flora_shell :- notrace,  %% stop any tracing
	(   conget(flora_shell_loaded, 1), !
	;   bootstrap_flora,
	    [flrshell],
	    STD_FPREFIX(shell)
	).
