%% bootstrap(package-dirname-as-string, package-name-as-symbol).
%% This also asserts 
%% package_configuration(dir(PackageName), FullPackageDirname)
%% some packages use it.

:- import bootstrap_package/2, package_configuration/2 from packaging.
:- import '_$_$_flora_shell'/0 from usermod.
:- import slash/1 from machine.

:- export bootstrap_flora/0, flora_shell/0.


%% bootstrap_package will fail, if Flora is already loaded,
%% so package_configuration won't be asserted twice.
bootstrap_flora :-
	bootstrap_package([flora,lib,pkgs],flora),
	assert(package_configuration(version(flora),'0.93 of 06/25/1999')),
	package_configuration(dir(flora),FloraDir),
	slash(S),
	fmt_write_string(LibFlrDisplay,'%s%ssyslib%sflrdisplay',
			 f(FloraDir,S,S)),
	[tables, LibFlrDisplay, flrutils].

flora_shell :- (package_configuration(loaded(flora), yes) -> true
	         ;   
		   bootstrap_flora
	       ),
	       [flrshell],
	       '_$_$_flora_shell'.
