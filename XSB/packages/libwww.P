:- import xsb_configuration/2 from xsb_configuration.
:- import bootstrap_package/2 from packaging.
:- import abort/1 from standard.


%% bootstrap(package-dirname-as-string, package-name-as-symbol).
%% This also asserts 
%% package_configuration(dir(PackageName), FullPackageDirname)
%% some packages use it.

:- export libwww_fetch_url/4, libwww_form_request/4.
:- import do_libwww_fetch_url___/4, do_libwww_form_request___/4
   from xsb_libwww.

:- bootstrap_package('libwww', libwww),
	(   xsb_configuration(libwww_support, 'yes')
	->  [libwwwconfig]
	;   abort('XSB hasn''t been configured with W3C''s libwww support.')
	).


libwww_fetch_url(X,Y,Z,W) :- do_libwww_fetch_url___(X,Y,Z,W).
libwww_form_request(X,Y,Z,W) :- do_libwww_form_request___(X,Y,Z,W).
