#! /bin/sh
# @configure_input@

echo "*** Installing py-xsb as a Python package"
cd ../packages/xsbpy

../../bin/xsb <<EOF
%%consult('.px_mk_setup_query').
consult(px_mk_setup), mk_setup('px/.tmp_pxsetup.py','@PYTHON_INCLUDE_DIR@').
halt.
EOF

cd px
@PYTHON_BIN@ .tmp_pxsetup.py bdist_wheel
@PYTHON_BIN@  -m pip -v install --no-index --find-links=dist px --user
