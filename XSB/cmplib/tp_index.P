/*======================================================================*/
/*  makeindex(+Sym, +Clauses, -Pil, -PilR,				*/
/*	      +PredPrag, +Tabled, +Tabind)				*/
/* 	Generates try/retry/trust and index instructions for clauses	*/
/*	of the predicate/function.					*/
/*======================================================================*/

/*----------------------------------------------------------------------*/
/* single clause predicate cases: no try/index instruction is needed.	*/
/*----------------------------------------------------------------------*/

makeindex(Sym,[clause(_,_,crec(_,Label))],Pil,Pilr,_,Tabled,Tabind) :- !,
	( Tabled =:= 0 -> Pil = Pilr
	; Tabind = tabled(Ind,Chs,Rhs,_), sym_name(Sym, _, Arity),
	  Pil = [tabletryfail(Arity,Label,Ind),tabconfig(Chs,Rhs)|Pilr]
	).

/*----------------------------------------------------------------------*/
/* 0-ary predicates generate try's only and are NOT indexed.		*/
/*----------------------------------------------------------------------*/

makeindex(Sym, Clauses, Pil, Pilr, _Prag, Tabled, Tabind) :-
	sym_name(Sym, _, Arity),
	Arity =:= 0,
	!,
	gennum(_N),
	index_label_list(Clauses,LabelList),
	index_gentrys(Arity,LabelList,Pil,Pilr,Tabled,Tabind).

/*----------------------------------------------------------------------*/
/* a parallel predicate generates try instructions only.		*/
/*----------------------------------------------------------------------*/

