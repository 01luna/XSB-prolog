	index_gentrys(Arity, LabelList, Pil1, Pilr, Tabled, Tabind).
*/

/*----------------------------------------------------------------------*
 * all other cases                                                      *
 *----------------------------------------------------------------------*/

makeindex(Sym, Clauses, Pil, Pilr, Prag, Tabled, Tabind) :-
	sym_name(Sym, _, Arity),
	( member(index(Narg), Prag), nonvar(Narg), !
	; Narg = 1 ),				% Default index on arg 1
	index_argpats(Clauses, Narg, ArgList),
	index_split(ArgList, ArgListGroup),
	( ArgListGroup = [_One] -> NeedLabel = 0, Pil2 = Pil
	; index_extract_label_list(ArgListGroup, LabelList),
	  index_gentrys(Arity, LabelList, Pil, Pil2, Tabled, Tabind),
	  NeedLabel = 1
	),
	index_groups(ArgListGroup, Narg, Pil2, Pilr,
		     NeedLabel, 0, Arity, Tabled, Tabind).

/*======================================================================*/
/* index_groups(+ArgListGroup, +ArgNum, -Pil, -PilRest, +NeedLabel,	*/
/*		+Parallel, +Arity, +Tabled, +Tabind)			*/
/*======================================================================*/

index_groups([], _, Pil, Pil, _, _, _, _, _).
index_groups([arglabel(T,Group,L)|Rest], Narg,Pil,Pilr,
		NeedLabel,Parallel,Arity,Tabled,Tabind) :-
	( T = g ->
	   ( NeedLabel =:= 0 -> Pil = Pil1
	   ; gennum(N), L = (inde,N), Pil = [label(inde,L)|Pil1]
           ),
	   index_group(Group, Narg, Pil1, Pil2, Parallel, Arity, Tabled, Tabind)
	; Pil = Pil2
	),
	index_groups(Rest, Narg, Pil2, Pilr, NeedLabel, Parallel, Arity,
							Tabled, Tabind).

/*======================================================================*/
/* index_group(+Group, +Narg, -Pil, -PilRest, +Parallel, +Arity,	*/
/*	       +Tabled, +Tabind)					*/
/*	Generates index and try/retry/trust instructions for a group.	*/
/*======================================================================*/

index_group([arglabel(T1,_,L1),arglabel(T2,_,L2)],
		Narg, Pil, Pilr, Parallel, Arity, Tabled, Tabind) :-
        ( index_sot_inst(T1,T2,Narg,L1,L2,Inst) -> Pil = [Inst|Pil1]
	; T1 = l, T2 = l -> Pil = Pil1
	),
	( Parallel =:= 0 -> Pil1 = Pil2 ; Pil1 = [partry(Arity,2)|Pil2] ),
	index_gentrys(Arity, [L1,L2], Pil2, Pilr, Tabled, Tabind).
index_group(Group, Narg, Pil, Pilr, Parallel, Arity, Tabled, Tabind) :-
	length(Group, Size),
	gennum(N), L = (inde,N),
	Pil = [cases(L, Arity, Size, _)|Pil1],
	index_genarglabel(Group, Pil1, Pil2),
	Pil2 = [switchonbound(Narg, L, Size)|Pil3],
	( Parallel =:= 0 -> Pil3 = Pil4 ; Pil3 = [partry(Arity,Size)|Pil4] ),
	index_extract_label_list(Group, LabelList),
	index_gentrys(Arity, LabelList, Pil4, Pilr,Tabled,Tabind).

index_genarglabel([], Pil, Pil).
index_genarglabel([ArgLabel|Rest], [ArgLabel|Pil], Pilr) :-
	index_genarglabel(Rest, Pil, Pilr).

/*======================================================================*/
/* index_gentrys(+Arity, +LabelList, -Pil, -PilR, +Tabled, +Tabind)	*/
/*	NOTE: Changed (23/1/94) to take option(shallow) out.		*/
/*======================================================================*/

index_gentrys(Arity, [Label|Rest], Pil, Pilr, Tabled, tabled(Ind,Chs,Rhs,_)) :-
%	( option(shallow) -> Pil = [trys(Arity,Label)|Pilm] ;
	  ( Tabled =\= 0  -> Pil = [tabletry(Arity,Label,Ind),
				    tabconfig(Chs,Rhs)|Pilm]
	  ;		     Pil = [try(Arity,Label)|Pilm]
	  ),
%	)
	index_genretrys(Arity, Rest, Pilm, Pilr, Tabled).

index_genretrys(Arity, [L1], Pil, Pilr, Tabled) :-
%	( option(shallow) -> Pil = [trusts(Arity,L1)|Pilr] ;
	  ( Tabled =\= 0  -> Pil = [tabletrust(Arity,L1)|Pilr]
	  ; 		     Pil = [trust(Arity,L1)|Pilr]
	  ).
%	).
index_genretrys(Arity, [L1|Rest], Pil, Pilr, Tabled) :-
	Rest = [_|_],
%	( option(shallow) -> Pil = [retrys(Arity,L1)|Pilm] ;
	  ( Tabled =\= 0  -> Pil = [tableretry(Arity,L1)|Pilm]
	  ;		     Pil = [retry(Arity,L1)|Pilm]
	  ),
%	),
	index_genretrys(Arity, Rest, Pilm, Pilr, Tabled).

