ALL =	asm.O asm_inst.O asm_opt.O asmpass2.O auxlry.O builtin.O \
	compile.O config.O cp_opt.O cutcheck.O flatten.O inprog.O \
	listutil.O makemode.O modeinf.O modes.O parse.O peephole.O \
	pre_cond.O preproc.O printres.O prof_sbp.O sanity.O \
	singlton.O spec.O suppltab.O symtab.O tabdef.O ti_mod.O \
	tp_comp.O tp_cond.O tp_eval.O tp_goal.O tp_index.O tp_var.O \
	tpinline.O tprog.O useinfer.O varproc.O writeasm.O

EMU_INCLUDES = ../emu/builtin.h ../emu/celltags_xsb.h ../emu/flag_defs_xsb.h \
	../emu/io_defs_xsb.h ../emu/syscall_xsb.h ../emu/sig_xsb.h \
	../emu/system_defs_xsb.h ../emu/socket_xsb.h 
PROLOG_INCLUDES = ../prolog_includes/char_defs.h ../prolog_includes/standard.h

Option = [sysmod,optimize,spec_repr,quit_on_error]

#-------------------------------------------------------------------#
#
XSB=../bin/xsb
Prolog = $(XSB) -e "segfault_handler(warn)."
#
#-------------------------------------------------------------------#

# Make sure warnings are saved in a file.
SVFILE = '../build/.xsb_cmplib_warn.tmp'
OWRITE = 1
STDWARN = 3
HDRMSG = "While compiling XSB/cmplib:"

OBJFILESAVED = objfiles.saved


# suffix rules
.SUFFIXES: .P .O .H

all: init  $(ALL) finish
	@../build/touch.sh cmd...
	$(Prolog) < cmd...
	/bin/rm cmd...
	@cat $(SVFILE)

%.O:   %.P  $(PROLOG_INCLUDES) $(EMU_INCLUDES)
	@cp -f $*.O $(OBJFILESAVED) || echo ""
	echo 'mc($*, $(Option)).' >> cmd...
# The following is done because of brain damage in some make utilities
# (notably Sun's), which don't take %.P %.H in the same dependency list
%.P:   %.H
	../build/touch.sh $@

# These targets are obsolete. They are here just in case some 
# obscure make utility doesn't understand patterns
.H.P:
	../build/touch.sh $@
.P.O:
	@cp -f $*.O $(OBJFILESAVED) || echo ""
	echo 'mc($*, $(Option)).' >> cmd...

init:
	rm -f $(SVFILE)
	@test -d $(OBJFILESAVED) || mkdir $(OBJFILESAVED)
	@echo 'import file_reopen/4, fmt_write/3, file_flush/2 from file_io.' >> cmd...
	@echo "file_reopen($(SVFILE),$(OWRITE),$(STDWARN),_)." >> cmd...
	@echo 'fmt_write($(STDWARN),"-------------- Warnings --------------------\n",_).' >> cmd...
	@echo 'fmt_write($(STDWARN),"%s\n",arg($(HDRMSG))).' >> cmd...
	@echo 'file_flush($(STDWARN),_).' >> cmd...

finish:
	@echo 'fmt_write($(STDWARN),"%s\n",arg("--------------------------------------------")).' >> cmd...

restore:
	mv -f $(OBJFILESAVED)/*.O .


.DONE:
	echo Done
