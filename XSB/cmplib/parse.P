        my_read(Cl,_),
	(Cl = (':-'(endif)) -> 
	    true
	  ; (Cl = (':-'(elseif(Condition))),cond_call(Condition) -> 
     	        true    
	        ;  (Cl = (':-'(if(_Call)))) -> 
     	               misc_error('XSB does not support nested conditional compilation.')
		     ; skip_over_condition(N))).

