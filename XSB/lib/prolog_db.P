	(Ord < 0
	 -> L3 = [V1|L3r],
	    order_sym_diff_list(L1r,L2,L3r)
	 ;  Ord =:= 0
	 -> order_sym_diff_list(L1r,L2r,L3)
	 ;  L3 = [V2|L3r],
