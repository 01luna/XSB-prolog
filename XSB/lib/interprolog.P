:- import getenv/2 from machine.
:- import bootstrap_syspackage/2 from packaging.


:- ( xsb_configuration(javac, '') -> true
	;
	 abort('Your system doesn''t seem to have the Java compiler, javac, installed')
   ),
   ( getenv('JAVA_HOME', JH), getenv('SWING_HOME', SH) ->
	abort('InterProlog requires that the environment variables JAVA_HOME and SWING_HOME must be set')
	;
	bootstrap_syspackage(interprolog, interprolog),
	[interprolog_shell]
     ).
