#-----------------------------------------------------------------------#
# Files in directory lib can be made even in the presense of no .O files.
# For that reason, self-make is always suggested.
#-----------------------------------------------------------------------#

ALL = 	aggregs.O array.O array1.O copyterm.O directry.O \
	intern.O odbc_call.O ordsets.O ora_call.O record.O \
	scrptutl.O socket.O interprolog.O

Option = [sysmod,optimize]

#-----------------------------------------------------------------------#
#
# Self-make: Version 1.4.1
#
XSB=../bin/xsb
Prolog = $(XSB) -i -s -m 2000 -c 2000
#
#-----------------------------------------------------------------------#

# continue to the next when one error occurs
.IGNORE:

# suffix rules
.SUFFIXES: .P .O .H

.H.P:
	echo 'mc($*, $(Option)).' >> cmd...

.P.O:
	echo 'mc($*, $(Option)).' >> cmd...

all: $(ALL)
	echo 'statistics.' >> cmd...
	$(Prolog) < cmd...
	/bin/rm cmd...

# Unfortunately, this needs to be commented on the NeXT.
# %.O:	%.H

.DONE:
	echo Done
