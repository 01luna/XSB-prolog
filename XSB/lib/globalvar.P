:- export globalvar/2.

:- import globalvar/1 from machine.
:- import log_ith/3 from basics.
:- import (dynamic)/1, assert/1 from assert.
:- import set_arg/3 from machine.

:- local '$globalvarmap'/2.

:- dynamic '$globalvarmap'/2.

globalvar(Name,Var) :-
	globalvar(G),
	('$globalvarmap'(Name,Index)
	 ->	true
	 ;	log_ith(1,G,MaxIndex),
		(var(MaxIndex)
		 ->	MaxIndex = maxindex(2),
			Index = 2
		 ;	MaxIndex = maxindex(OldIndex),
			Index is OldIndex + 1,
			set_arg(MaxIndex,1,Index)
		),
		assert('$globalvarmap'(Name,Index))
	),
	log_ith(Index,G,Var).

