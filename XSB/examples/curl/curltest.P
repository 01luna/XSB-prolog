test_enc_url_no_opt(OutPath) :-
	encode_url(url('https://webmail.cs.sunysb.edu/cgi-bin/openwebmail/openwebmail.pl'), DirEnc, FileUnEnc), 
	slash(Slash), fmt_write_string(OutFile, '%s%senc_no_opt.txt', f(OutPath, Slash)),
	tell(OutFile), 
	writeln('test_enc_url_no_opt on https://webmail.cs.sunysb.edu/cgi-bin/openwebmail/openwebmail.pl'), 
	write('Directory = '), writeln(DirEnc), 
	write('File = '), writeln(FileUnEnc), 
	told.

test_enc_url(OutPath) :-
	encode_url(url('http://www.cs.sunysb.edu/~cse532/'), [redirect(true)], DirEnc, FileUnEnc), 
	slash(Slash), fmt_write_string(OutFile, '%s%senc.txt', f(OutPath, Slash)),
	tell(OutFile), 
	write(test_encode_url), writeln(' on http://www.cs.sunysb.edu/~cse532/'), 
	write('Directory = '), writeln(DirEnc), 
	write('File = '), writeln(FileUnEnc), 
	told.

