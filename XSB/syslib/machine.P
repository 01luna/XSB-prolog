conname(Con, Name) :-
	term_type(Con, Type),
	( Type =:= 1 -> term_psc(Con, Psc), psc_name(Psc, Name)
	; Type =:= 5 -> Name = Con
	).

conpsc(Con, Psc) :-
	term_type(Con, Type),
	( Type =:= 1 -> term_psc(Con, Psc)
	; Type =:= 5 -> psc_insert(Con, 0, Psc, 0)
	).

